<?php $__env->startSection('content'); ?>

<h1>Questions</h1>

<?php if(Auth::check()): ?>
    <p align="right">
        Welcome <?php echo e(Auth::user()->name); ?>

        <br>
        <a href=<?php echo e(action('Auth\AuthController@getLogout')); ?>>Logout</a>
    </p>
<?php endif; ?>
<?php if ( ! (Auth::check())): ?>
    <p align="right">
        <a href=<?php echo e(action('Auth\AuthController@postLogin')); ?>>Login</a>
        <a href=<?php echo e(action('Auth\AuthController@postRegister')); ?>>Register</a>
    </p>

<?php endif; ?>
<hr/>

<?php foreach($questions as $question): ?>
    <question>

     <h2><div class="body"><?php echo e($question->question); ?></div></h2>
        <h4><div class="body"><?php echo e($question->description); ?></div></h4>


    </question>
<?php endforeach; ?>

<?php $__env->stopSection(); ?>

<?php echo $__env->make('app', array_except(get_defined_vars(), array('__data', '__path')))->render(); ?>
<?php $__env->startSection('content'); ?>

<h1>Questions</h1>

<hr/>
<hr/>
<a href=<?php echo e(action('QuestionsController@ask')); ?>>Ask Questions</a>
<hr/>
<?php foreach($questions as $question): ?>
    <article>
        <h2><a href=<?php echo e(action('QuestionsController@show',$question->id)); ?>><?php echo e($question->question); ?></a></h2>
        <div class="body"><?php echo $question->description; ?></div>
        <div class="footer"><?php echo e($question->created_at->diffForHumans()); ?></div>
        <?php echo e($question->answers->count()); ?> Response
        <br>
        <?php echo Form::open(); ?>

        <?php if($question->liked()): ?>
            <button type="button" id="<?php echo e($question->id); ?>" class="upvote-question"><?php echo e($question->likeCount); ?> | Upvoted</button>
        <?php else: ?>
            <button type="button" id="<?php echo e($question->id); ?>" class="upvote-question"><?php echo e($question->likeCount); ?> | Upvote</button>
        <?php endif; ?>
        <?php if($question->disliked()): ?>
            <button type="button" id="<?php echo e($question->id); ?>" class="downvote-question"><?php echo e($question->dislikeCount); ?> | DownVoted</button>
        <?php else: ?>
            <button type="button" id="<?php echo e($question->id); ?>" class="downvote-question"><?php echo e($question->dislikeCount); ?> | Downvote</button>
        <?php endif; ?>
        <?php echo Form::close(); ?>

        <hr>
    </article>
<?php endforeach; ?>

<?php $__env->stopSection(); ?>

<?php echo $__env->make('app', array_except(get_defined_vars(), array('__data', '__path')))->render(); ?>